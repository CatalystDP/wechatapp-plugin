{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    // "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "/node_modules/",
    "/test/",
    "/test-plugin/"
  ]
}